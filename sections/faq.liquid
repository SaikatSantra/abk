
<section class="faq-section">
  <div class="wrapper page-width page-width--narrow">
    <div class="faq-content">
      <h1>{{section.settings.csm_ttl}}</h1>
      <div class="accordion_container">
        <div class="accordian-tabs">
          <!--- Question 1 starts --->
          {% for block in section.blocks %}


          <div class="product__accordion accordion" {{ block.shopify_attributes }}>
            <details>
              <summary>
                <div class="summary__title">
                  {% render 'icon-accordion', icon: block.settings.icon %}
                  <h2 class="h4 faq_accordion__title">
                    {{block.settings.qstn}}
                  </h2>
                </div>
                {% render 'icon-caret' %}
              </summary>
              <div class="accordion__content rte">
               {{ block.settings.ans }}
              </div>
            </details>
          </div>

        {% endfor %}

        </div>
      </div>
    </div>

  </div>
</section>



{% schema %}
  {
    "name": "FAQ",
    "settings": [
		{
			"label": "Title",
			"type": "textarea",
			"id": "csm_ttl"
		}
],
"blocks":[
	{
		"name": "Faq",
		"type": "block-1",
		"settings":[
			{
				"label": "Question",
				"type": "textarea",
				"id": "qstn"
			},
			{
				"label": "Answer",
				"type": "textarea",
				"id": "ans"
			}
]
}
]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
{% endjavascript %}

